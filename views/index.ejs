<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>Контроль качества</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">

  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
  <script src="main.js"></script>
</head>

<style>
  .card img
  {
    height: 100%;
    width: 100%;
  }
  a
  {
    color: black;
    text-decoration: none;
  }
  a:hover
  {
    color: black;
    text-decoration: none;
  }
  .card:hover
  {
    box-shadow: 0 0 20px rgba(35, 98, 192, 0.2); 
  }
</style>


<body style='overflow-x:hidden;'>
  <nav class="navbar navbar-light" style="background-color: #e3f2fd; font-size: 30px;">
    <div class="container-fluid">
      <a class="navbar-brand" href="/" style="font-size: 30px;">Контрольные карты</a>
      <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
        Добавить
      </button>
      <span class="navbar-text">
        Панаскин Алексей 201-323
      </span>

    </div>
  </nav>

  <%-include('modal.ejs') %>

  <div class="row row-cols-3 row-cols-md-4 g-4" style="margin: 1%;">
    


    <% for (let vm of vms) { %>
      <a href="/details/<%= vm['id'] %>" >
      <div class="card" style="margin: 3%;">
         <img src='/storage/<%= vm['filePath']%>' class="card-img-top" alt="..."> 
        <div class="card-body" style="font-size: 22px;">
          <h5 class="card-title"><%= vm['name']%></h5>
            <p class="card-text"><%= vm['releaser']%> - <%= vm['report_date']%></p>
            <p class="card-text">Партия: <%= vm['consignment']%>. Выборка: <%= vm['selection']%></p>
        </div>
      </div></a>
    <% } %>

</body>
</html>